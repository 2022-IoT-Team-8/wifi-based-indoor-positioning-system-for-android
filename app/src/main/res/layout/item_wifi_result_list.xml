<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_wifi_result_list_ssid_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1" />

    <TextView
        android:id="@+id/item_wifi_result_list_bssid_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1" />

    <TextView
        android:id="@+id/item_wifi_result_list_capabilities_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_wifi_result_frequency_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_wifi_result_list_level_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1" />

</LinearLayout>